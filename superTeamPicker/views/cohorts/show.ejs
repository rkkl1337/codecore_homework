<%- include("../partials/header") %>
<div class="card m-3 p-2">
    <div class="card-body">        
    <h1 class="card-title"><%= cohort.name %></h1>
    <p class="card-text"><%= cohort.members %></p>
    
    <hr class="my-4">
    
    <form action="/cohorts/<%= cohort.id %>" method="GET">
      <p class="card-text">Method</p>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="method" id="method1" value="team" checked>
        <label class="form-check-label" for="method1">
          Team Count
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="method" id="method2" value="count">
        <label class="form-check-label" for="method2">
          Number Per Team
        </label>
      </div>
      <div class="form-group mt-4">
        <label for="quantity">Quantity</label>
        <input type="number" class="form-control" id="quantity" name="quantity">
      </div>
      <input type="submit" class="btn btn-outline-primary btn-block mb-2" value="Assign Teams">
    </form>

    <form action="/cohorts/<%= cohort.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete" class="btn btn-outline-primary btn-block mb-2">
    </form>
    <a href="/cohorts/<%= cohort.id %>/edit" class="btn btn-outline-primary btn-block">Edit</a>
    <div>
    <ul class="list-group-flush p-0 m-0">
      <li class="list-group-item">
          <p class="font-weight-bold m-0">#&nbsp&nbsp&nbsp&nbspMethod</p>
      </li>
      <% for (let item of result) { %>
        <li class="list-group-item">
          <div class="d-flex m-0">
            <p class="font-weight-bold"><%= result.indexOf(item) + 1 %>.&nbsp&nbsp&nbsp&nbsp</p><%= item %>
          </div>
        </li>
      <% } %>
    </ul>
    </div>
    </div>
</div>
<%- include("../partials/footer") %>